{
  "binance": {
    "api_key": "",
    "api_secret": ""
  },
  "telegram": {
    "bot_token": "YOUR_BOT_TOKEN",
    "chat_id": "YOUR_CHAT_ID"
  },
  "scanner": {
    "timeframe": "1h",
    "scan_interval_seconds": 900,
    "market_cap_max_usd": 500000000,
    "volume_recent_candles": 2,
    "volume_baseline_candles": 15,
    "volume_multiplier": 3.0,
    "breakout_enabled": true,
    "breakout_lookback": 20,
    "open_interest_enabled": false,
    "open_interest_periods": 15,
    "open_interest_min_increase_pct": 5.0,
    "include_unknown_market_cap": true,
    "cooldown_hours": 12,
    "excluded_symbols": ["USDCUSDT", "BTCDOMUSDT"]
  },
  "tracker": {
    "enabled": true,
    "max_age_hours": 72,
    "price_update_interval_seconds": 300,
    "data_dir": "data"
  },
  "rate_limit": {
    "binance_delay_ms": 100,
    "market_cap_cache_minutes": 120
  },
  "logging": {
    "level": "INFO",
    "log_file": "scanner.log"
  }
}
